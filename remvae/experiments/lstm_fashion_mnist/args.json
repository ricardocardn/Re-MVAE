{
    "name": "lstm_fashion_mnist",
    "reader": "FashionMNISTMixedDataset",
    "text_architecture": "LSTMSeq2seqBidirectional",
    "image_architecture": "FixedConvolutionalImageAutoencoder",
    "tokenizer_path": "../../models/example/tokenizer.pkl",
    "dataset_length": 10000,
    "image_size": 56,
    "input_channels": 1,
    "latent_dim": 30,
    "embedding_dim": 64,
    "hidden_dim": 64,
    "context_length": 10,
    "batch_size": 32,
    "epochs": 30,
    "trainer": "MixedAdaptativeAnnealingTrainer",
    "training_method": "scaled_logistic_kl_annealing_func",
    "weights": {
        "text_model_loss": 10,
        "image_model_loss": 1000,
        "text_kd_loss": 1,
        "image_kd_loss": 1,
        "align_loss": 100
    },
    "k": 0.003,
    "x0": 1000,
    "results_dir": "../../experiments/lstm_fashion_mnist",
    "checkpoint_dir": "../../models/lstm_fashion_mnist",
    "checkpoint_steps": 3000,
    "evaluators": [
        "MixedFashionMNISTEvaluator",
        "MixedPerplexityEvaluator"
    ]
}